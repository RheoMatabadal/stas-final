<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalCenterTitle">Send us a message</h2>
                <button type="button" class="close hvr-wobble-horizontal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <form>
                        <div class="form-group">

                            <input type="text" class="form-control half hvr-sweep-to-left" id="Name" placeholder="Name(required)" required="required">
                        </div>
                        <br>
                        <div class="form-group">

                            <input type="email" class="form-control half" id="Email" placeholder="E-mail Adress(required)" required="required">
                        </div>
                        <br>
                        <div class="form-group">

                            <input type="text" class="form-control half" id="Subject" placeholder="Subject">
                        </div>
                        <br>
                        <div class="form-group">

                            <textarea class="form-control half" id="MessageField" rows="3" placeholder="Message(required)" required="required"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control hidden" id="ToEmail" value="@Umbraco.Field("contactEmail")"/>
                        </div>
                    </form>
            </div>
            <div class="modal-footer">
         
                <a id="send-form" class="btn btn-dark pull-left hvr-pulse-grow" href="#"><i class="fab fa-telegram-plane"></i>Send message</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#send-form").on("click", function () {
            

            var toEmail = $("#ToEmail").val();
            var fromEmail = $("#Email").val();
            var fromName = $("#Name").val();
            var subject = $("#Subject").val();
            var message = $("#MessageField").val();
            var website = "STAS";

            var data = { "to": toEmail, "fromEmail": fromEmail, "fromName": fromName, "subject": subject, "message": message, "website":website };

            $.ajax({
                type: "POST",
                url: "http://api.adept.sr/umbraco/api/mail/postMail",
                // The key needs to match your method's input parameter (case-sensitive).
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) { alert(data); },
                failure: function (errMsg) {
                    alert(errMsg);
                }
            });
            $('#exampleModalCenter').modal('hide');

        });
    });
    
  
</script>
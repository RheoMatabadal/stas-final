@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div class="vl" id="vl" onclick="openArt()">
    <p>FEATURED ARTIST: @Umbraco.Field("artistName", casing: RenderFieldCaseType.Upper)</p>
</div>
<section id="artist">
    <div id="mySidenav" class="sidenav">
        <div class="container-fluid-no-pad">
            <div class="row no-pad">

                <div class="col-md-1 col-sm-12 col-xs-12">


                    <div class="slider-nav">

                        <img src="~/img/featart1.png" alt="image" class="img-responsive hvr-grow" />


                        <img src="~/img/featart2.png" alt="image" class="img-responsive hvr-grow" />


                        <img src="~/img/featart3.png" alt="image" class="img-responsive hvr-grow" />


                    </div>
                </div>

                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="slider-for no-pad">

                        <img src="~/img/featart1.png" alt="image" />


                        <img src="~/img/featart2.png" alt="image" />




                        <img src="~/img/featart3.png" alt="image" />




                    </div>
                </div>




                <div class="col-md-2 col-sm-12 col-xs-12 artist">
                    <img src="@Umbraco.Field("artistImageUrl")" class="img-fluid hvr-grow" alt="artist">

                    <p class="about-artist">ABOUT THE ARTIST</p>

                    <p>
                        @Umbraco.Field("aboutArtist")
                        <br>Visit @Umbraco.Field("artistName", insertAfter:"'s") website to see  more of her work
                        <a class="left-align" href="http://www.kathleenhogenboom.com" target="_blank">kathleenhogenboom.com</a>
                </div>
                <a href="javascript:void(0)" class="closebtn" onclick="closeArt()">&times;</a>
            </div>
        </div>
    </div>
</section>